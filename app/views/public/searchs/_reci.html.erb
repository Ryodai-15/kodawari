<div class="container">
  <div class="row my-5">
    <div class="col-sm-3">
      <%= render 'public/members/mypage', member: current_member %>
    </div>
    
    <div class="col-sm-9">
      <p>レシピ一覧(全<%= recipes.count %>件)</p>
      <div class="d-flex flex-wrap">
        <% recipes.each do |recipe| %>
          <div class="flex-item">
            <div class="card　border-0">
              <%= link_to product_recipe_path(recipe.product_id,recipe.id) do %>
                <%= attachment_image_tag recipe, :image, :fill, 170, 100 %>
                <p class="card-title">
                  <%= recipe.name %>
                </p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>        
    </div>
  </div>
</div>