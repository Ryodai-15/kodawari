<!--render 'public/members/mypage', member: @member-->

<!--プロフィール画を表示-->
<div class = "profile-img" >
  <%= attachment_image_tag member, :image, :fill, 100, 100, fallback: "no_image.jpg", class:"prifile_img"  %>
</div>
<!--会員情報を表示-->
<div class = "information" >
  <p><strong>ニックネーム</strong></p>
  <p><%= member.name %></p>
  <p><strong>introduction</strong></p>
  <P><%= simple_format(member.introduction) %></P>
</div>

<!--いいね一覧と編集リンクボタンを表示-->
<div class = "botton" >
  <div class='favorite-botton'>
    <%= link_to "Myいいねレシピ一覧", member_favorites_path(member.id), class: "btn btn-primary" %>
  </div>

  <div class='edit-botton'>
    <%= link_to "会員情報を編集する", edit_member_path(member.id), class: "btn btn-success" %>
  </div>
</div>
