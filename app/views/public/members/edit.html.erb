<div class = "container">
  <div class = "row">
    <h4 class="mt-3 mb-3 bg-light">会員情報編集</h4>
  </div>
<!--form_with部分-->
<%= form_with model: @member, url:member_path, local:true do |f| %>
    <div class = "row">
      <table class="table-borderless-form">
            <tr>
              <td>プロフィール画面</td>
              <td>
                  <%= attachment_image_tag @member, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
                  <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
              </td>
            </tr>
            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td>自己紹介</td>
              <td><%= f.text_field :introduction %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存", class: 'btn btn-success' %></td>
              <div class="col-sm-1"></div>
              <td><%= link_to "退会する", unsubscribe_members_path,class:"btn btn-danger"%></td>
            </tr>
          </div>
      </table>
<% end %>
</div>