<!--バリデーションメッセージ-->
<% if @member.errors.any? %>
  <div class="notification is-danger">
    <h2><%= @member.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class = "container">
  <div class = "row">
    <div class="col-sm-7">
      <h4>レシピ編集画面</h4>
    </div>
  </div>
<!--form_with部分-->
<%= form_with model: @member, url:member_path, local:true do |f| %>
    <div class = "row">
      <table class="table-borderless-form">
        <tr>
          <td>プロフィール画面</td>
          <td>
              <%= attachment_image_tag @member, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
              <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
          </td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= f.text_field :name, class: 'form-mini' %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= f.text_area :introduction, class: 'form-size' %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, class: 'form-mini' %></td>
        </tr>
      </table>
    </div>
    <div class = "recipe-button">
      <p class="card-button">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      </p>
      <p class="card-button">
        <%= link_to "退会する", unsubscribe_members_path,class:"btn btn-danger"%>
      </p>
    </div>
<% end %>
</div>