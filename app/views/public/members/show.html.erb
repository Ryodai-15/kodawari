 <div class = "container">
    <div class = "row">
       <div class="col-sm-1"></div>
        <h4 class="mt-3 mb-3 bg-light">マイページ</h4>
    </div>

    <div class = "row">
      <h3>登録情報</h3>
      <div class="col-sm-1"></div>
      <%= link_to "編集する", edit_member_path(@member.id), class: "btn btn-success" %>
    </div>

    <div class = "row">
      <div class = "col-sm-10 ">
        <table class = "table table-bordered">
          <tr>
            <td>ニックネーム</td>
            <td><%= @member.name %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= @member.introduction %></td>
          </tr>
            <td>メールアドレス</td>
            <td><%= @member.email %></td>
          </tr>
        </table>
      </div>
    </div>
</div>