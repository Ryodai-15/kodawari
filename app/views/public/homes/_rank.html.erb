<!--render 'public/homes/rank', recipes: @recipes-->


<div class="recipe-index">
  <p class = "rank"><strong>いいねレシピTOP3</strong></p>
  <div class="d-flex flex-wrap">
    <% all_ranks.each.with_index(1) do |recipe, i| %>
    <div class="rank-product">
      <div class="card　border-0">
        <%= link_to product_recipe_path(recipe.product_id,recipe.id) do %>
          <%= attachment_image_tag recipe, :image, :fill, 170, 100 %>
          <p class="rank-title">
            第<%= i %>位 <%= recipe.name %>
          </p>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>