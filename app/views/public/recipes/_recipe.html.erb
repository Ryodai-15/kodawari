<!--render 'public/recipes/recipe', recipes: @recipes-->


<div class="recipe-index">
  <p>レシピ一覧(全<%= Recipe.count %>件)</p>
  <div class="d-flex flex-wrap">
    <% recipes.each do |recipe| %>
    <div class="flex-item">
      <div class="card　border-0">
        <%= link_to product_recipe_path(recipe.product_id,recipe.id) do %>
          <%= attachment_image_tag recipe, :image, :fill, 170, 100 %>
          <p class="card-title">
            <%= recipe.name %>
          </p>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>        
</div>