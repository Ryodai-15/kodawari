<div class="container">
  <div class="row text-right mt-4">
    <h4 class="col-sm-2">商品一覧</h4>
    <div class ="col-sm-10">
      <%= link_to "", new_admin_product_path, class: "fas fa-plus-circle fa-2x" %>
    </div>
  </div>

  <div class="row">
    <table class="table table-hover table-inverse">
        <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>商品情報</th>
              <th>商品のこだわり</th>
            </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td class="align-middle"><%= product.id %></td>
              <td class="align-middle">
                <%= link_to admin_product_path(product.id) do %>
                  <%= product.name %>
                <% end %>
              </td>
              <td class="align-middle"><%= product.introduction %></td>
              <td class="align-middle"><%= product.kodawari %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
    <%= paginate @products %>
</div>