<div class="container">
  <div class="row text-right my-4">
    <div class="col-sm-2">
      <h4>商品詳細</h4>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-sm-4">
      <div>
        <%= attachment_image_tag @product, :image, :fill, 350, 250 %>
      </div>
    </div>

    <div class="col-sm-6">
      <form>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @product.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= simple_format(@product.introduction) %></td>
            </tr>
            <tr>
              <td>商品のこだわり</td>
              <td><%= simple_format(@product.kodawari) %></td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-12">
      <div class="text-center">
        <%= link_to "編集", edit_admin_product_path, class:"btn btn-success btn-lg col-2" %>
      </div>
    </div>
  </div>
</div>