<div class="container">
  <div class="row text-right mt-4">
    <div class="col-sm-4">
      <h4>商品編集</h4>
    </div>
  </div>
  
  <%= form_with model: [:admin, @product], local:true do |f| %>
    <div class="row">
      <div class="col-sm-10 offset-2">
        <table class="table-borderless-item">
          <tr>
            <div>
              <td><%= f.label :商品画像 %></td>
              <td><%= f.attachment_field :image %></td>
            </div>
          </tr>
          <tr>
            <div class="col-sm-2">
              <td><%= f.label :商品名 %></td>
              <td><%= f.text_field :name, class:"form-control", autofocus: true %></td>
            </div>
          </tr>
          <tr>
            <div class="col-sm-2">
              <td><%= f.label :商品説明 %></td>
              <td><%= f.text_area :introduction, class:"form-control", autofocus: true %></td>
            </div>
          </tr>
          <tr> 
            <div>
              <td><%= f.label :商品のこだわり %></td>
              <td><%= f.text_area :kodawari, class:"form-control", autofocus: true %></td>
            </div>
          </tr>
        </table>
      </div>
    </div>
    
    <div class="row text-center mb-3">
      <div class="col-sm-12">
        <td><%= f.submit "変更を保存" ,class: 'btn btn-success col-sm-2' %></td>
      </div>
    </div>
  <% end %>
</div>
