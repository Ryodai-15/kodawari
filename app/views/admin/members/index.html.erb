<div class="container">
  <div class="row text-right mt-4">
    <div class="col-sm-2">
      <h4>会員一覧</h4>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <table class="table">
        <thead>
            <tr>
                <th>会員ID</th>
                <th>ニックネーム</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
        </thead>

        <tbody>
            <% @members.each do |member|%>
            <tr>
                <td><%= member.id %></td>
                <td>
                    <%= link_to admin_member_path(member.id) do %>
                      <%= member.name %>
                    <% end %>
                </td>
                <td><%= member.email %></td>
                <td>
                  <% if member.is_deleted == false %>
                    <p class="color text-success", style="margin:0">有効</p>
                  <% else %>
                    <p class="color text-secondary", style="margin:0">退会</p>
                  <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <%= paginate @members %>
</div>
