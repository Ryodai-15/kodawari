<div class="container">
  <div class="row mt-4">
    <div class="col-sm-5">
      <h4><%= @member.name %>さんの会員情報編集</h4>
    </div>
  </div>
<!--form_with編集フォームを記入-->
<%= form_with model:@member, url: admin_member_path, local:true do |f| %>
    <div class="row">
      <table class="table-borderless-member">
          <tr>
            <td>会員ID</td>
            <td><%= @member.id %></td>
          </tr>
            <td>ニックネーム</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
            </td>
          </tr>
      </table>
    </div>
    <div class="row text-right mb-4">
      <div class="col-sm-4">
        <div><%= f.submit '変更を保存', class:"btn btn-success" %></div>
      </div>
    </div>
  <% end %>
</div>